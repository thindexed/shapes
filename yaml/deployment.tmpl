apiVersion: apps/v1
kind: Deployment
metadata:
  name: shapes
  namespace: default
spec:
  replicas: 1
  selector:
    matchLabels:
      name: shapes
  template:
    metadata:
      labels:
        name: shapes
    spec:
      containers:
      - name: shapes
        image: <image-name>
        envFrom:
        - secretRef:
            name: github-secrets
        env:
        - name: DESIGNER_URL
          value: "https://app.<DOMAIN>/designer"